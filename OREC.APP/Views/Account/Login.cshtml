@model OREC.BL.DTO.LoginDTO

@{
    Layout ="~/Views/Shared/_LoginLayout.cshtml";
}
<title>OREC - Login</title>
<h2 class="text-center">Login</h2>
<form method="post">
    <div class="form-group">
        <input asp-for="EmailID" placeholder="Email" class="form-control" />
        <span asp-validation-for="EmailID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="Password" type="password" placeholder="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    @Html.ValidationMessage("customError", new { @class = "text-danger" })
    <div class="form-check">
        <input type="submit" class="btn btn-login float-right" value="Submit" />
    </div>
    <div class="copy-text"> Don't have an account! <a asp-controller="Account" asp-action="Register"> Sign Up Here </a></div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
